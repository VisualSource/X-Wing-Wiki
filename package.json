{
  "name": "x-wing-wiki",
  "private": true,
  "version": "0.5.0",
  "type": "module",
  "engines": {
    "node": "18.*.*"
  },
  "scripts-config": {
    "temp": "./tmp",
    "rules_reference_url": "https://cdn.svc.asmodee.net/production-amgcom/uploads/2023/09/SWZ_RulesReference_v1.4.6-1.pdf"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "prettier --check ./src",
    "fix": "pretter --write ./src",
    "build:reference": "node ./scripts/pdf/reference.js",
    "build:loadouts": "deno run --allow-net --allow-read --allow-write .\\scripts\\fetch_loadouts.ts",
    "build:upgrades": "deno run --allow-net --allow-read --allow-write .\\scripts\\create_upgrades.ts",
    "build:stdloadout": "deno run --allow-net --allow-read --allow-write .\\scripts\\std_loadouts.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@tanstack/react-virtual": "3.0.0-beta.68",
    "fuse.js": "^7.0.0",
    "html2pdf.js": "^0.10.1",
    "pdf-parse": "^1.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.18.0",
    "use-debounce": "^10.0.0",
    "use-local-storage": "^3.0.0"
  },
  "devDependencies": {
    "@mdx-js/rollup": "^3.0.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "rollup-plugin-visualizer": "^5.9.2",
    "superjson": "^2.2.1",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "unplugin-fonts": "^1.0.3",
    "vite": "^4.5.0",
    "vite-plugin-pwa": "^0.16.7",
    "workbox-window": "^7.0.0"
  }
}
